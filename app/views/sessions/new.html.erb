<div class="container">
<%= simple_form_for(sign_in_path, html: { class: "form-signin well"}) do |f| %>
    <h2 class="form-signin-heading">Please sign in</h2>
    <%= f.input :email, class:"sr-only form-control", placeholder:"example@mail.com", required: true %>
    <%= f.input :password, class:"sr-only form-control", placeholder:"Password", required: true %>
    <div class="checkbox">
      <label>
            <input type="checkbox" value="remember-me"> Remember me
      </label>
    </div>
    <%= f.submit "Sign in", class: "btn btn-lg btn-primary btn-block" %>
<% end %>
</div>