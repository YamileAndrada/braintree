// Coloque su configuración en este archivo para sobrescribir la configuración predeterminada y de usuario.
{
    //advanced: set command line options for some linters:
    "ruby.lint": {
        "ruby": true,
        "rubocop": {
            "only": ["SpaceInsideBlockBraces", "LeadingCommentSpace"],
            "lint": true,
            "rails": true,
            "use_bundle_exec": true
        },
        "reek": false,
        "fasterer": true
    },
    "ruby.locate": {
	    "include": "**/*.[rb|erb]",
	    "exclude": "{**/@(test|spec|tmp|.*),**/@(test|spec|tmp|.*)/**,**/*_spec.rb}"
    }
}